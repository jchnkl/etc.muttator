cmap        <silent> <C-n> <Down>
cmap        <silent> <C-p> <Up>

map         <silent> "\\b" :b#<Return>
nmap        <silent> "\\b" :b#<Return>

nnoremap    <silent> <C-n> gt
nnoremap    <silent> <C-p> gT

noremap     <silent> "\\g" :copyto<Space>columbus.lokal.lan:<Space>columbus.lokal.lan/Spam/Train<Space>Good<Return>
noremap     <silent> "\\s" :moveto<Space>columbus.lokal.lan:<Space>columbus.lokal.lan/Spam/Train<Space>Spam<Return>

set runtimepath=/home/jochen/.muttator
set visualbell
vmap <silent> "\\b" :b#<Return>
source! /home/jochen/.muttatorrc.local

javascript << EOF
var currentLayout = -1;
changeLayout = function () {
  if (document.width < window.screen.height && currentLayout != kWideMailLayout) {
    currentLayout = kWideMailLayout;
    ChangeMailLayout(kWideMailLayout); // kWideMailLayout = 1
  } else if (document.width >= window.screen.height && currentLayout != kVerticalMailLayout) {
    currentLayout = kVerticalMailLayout;
    ChangeMailLayout(kVerticalMailLayout); // kVerticalMailLayout = 2
  } else {
    return
  }
}

addEventListener("resize", changeLayout, false);

EOF

autocmd MuttatorEnter .* -javascript changeLayout

